{
  "version": 2,
  "builds": [
    {
      "src": "api/chat.ts",
      "use": "@vercel/node"
    },
    {
      "src": "sentiabot-frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/sentiabot-frontend/$1" }
  ]
}
