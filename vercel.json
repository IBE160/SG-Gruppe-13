{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],
  "builds": [
    {
      "src": "sentiabot-frontend/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "sentiabot-frontend/dist" }
    },
    {
      "src": "api/chat.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/(.*)",
      "dest": "sentiabot-frontend"
    }
  ]
}