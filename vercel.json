{
  "version": 2,
  "builds": [
    {
      "src": "sentiabot-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],

  "outputDirectory": "sentiabot-frontend/dist",
  
  "routes": [

    { "src": "/api/(.*)", "dest": "api/$1" },

    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/vite.svg", "dest": "/vite.svg" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}