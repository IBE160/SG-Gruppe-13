{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "sentiabot-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      },
      "workdir": "sentiabot-frontend"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/sentiabot-frontend/assets/$1" },
    { "src": "/(.*)", "dest": "/sentiabot-frontend/index.html" }
  ]
}
