{
  "version": 2,
  "builds": [
    {
      "src": "sentiabot-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/chat.ts",
      "use": "@vercel/node"
    }
  ],

  "outputDirectory": "sentiabot-frontend/dist",
  
  "routes": [

    { "src": "/api/chat", "dest": "api/chat.ts" },

    {
      "handle": "filesystem"
    },
    
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}